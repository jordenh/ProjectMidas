<?xml version="1.0" encoding="utf-8"?>
<profiles>
	<profile name="keyboard/holdMode enabled">
        <sequences>
			<sequence state="gestureMode" name="Left Click">
                <gestures>
                    <gesture type="tap">fist</gesture>
                </gestures>
                <commands>
					<command type="mouse">
						<actions>
							<action>leftClick</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="gestureMode" name="Right Click">
                <gestures>
                    <gesture type="tap">fingersSpread</gesture>
                </gestures>
                <commands>
					<command type="mouse">
						<actions>
							<action>rightClick</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="keyboardMode" name="Swap Ring Focus">
                <gestures>
                    <gesture type="tap">waveOut</gesture>
                </gestures>
                <commands>
					<command type="keyboardGui">
						<actions>
							<action>swapRingFocus</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="keyboardMode" name="Select">
                <gestures>
                    <gesture type="tap">fist</gesture>
                </gestures>
                <commands>
					<command type="keyboardGui">
						<actions>
							<action>select</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="keyboardMode" name="Hold Select">
                <gestures>
                    <gesture type="hold">fist</gesture>
                </gestures>
                <commands>
					<command type="keyboardGui">
						<actions>
							<action>holdSelect</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="keyboardMode" name="Change Wheels">
                <gestures>
                    <gesture type="tap">fingersSpread</gesture>
                </gestures>
                <commands>
					<command type="keyboardGui">
						<actions>
							<action>changeWheels</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="lockMode" name="Unlock">
                <gestures>
                    <gesture type="tap">doubleTap</gesture>
                    <gesture type="tap">doubleTap</gesture>
                </gestures>
                <commands>
					<command type="stateChange">
						<actions>
							<action>gestureMode</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="gestureMode" name="Gesture to Lock">
                <gestures>
                    <gesture type="tap">doubleTap</gesture>
                    <gesture type="tap">doubleTap</gesture>					
                </gestures>
                <commands>
					<command type="stateChange">
						<actions>
							<action>lockMode</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="keyboardMode" name="Keyboard to Lock">
                <gestures>
                    <gesture type="tap">doubleTap</gesture>
                    <gesture type="tap">doubleTap</gesture>
                </gestures>
                <commands>
					<command type="stateChange">
						<actions>
							<action>lockMode</action>
						</actions>
					</command>
				</commands>
            </sequence>
            <sequence state="keyboardMode" name="Backspace">
                <gestures>
                    <gesture type="tap">waveIn</gesture>
                </gestures>
                <commands>
					<command type="keyboardGui">
						<actions>
							<action>backspace</action>
						</actions>
					</command>
				</commands>
            </sequence>
			
			<sequence state="gestureMode" name="Volume">
                <gestures>
                    <gesture type="hold">fist</gesture>
                </gestures>
                <commands>
					<command type="stateChange">
						<actions>
							<action>gestureHoldThree</action>
						</actions>
					</command>
				</commands>
            </sequence>
			<sequence state="gestureMode" name="Arrow Keys">
                <gestures>
                    <gesture type="hold">fingersSpread</gesture>
                </gestures>
                <commands>
					<command type="stateChange">
						<actions>
							<action>gestureHoldTwo</action>
						</actions>
					</command>
				</commands>
            </sequence>
			<sequence state="gestureMode" name="Arrow Keys Veloc">
                <gestures>
                    <gesture type="hold">waveIn</gesture>
                </gestures>
                <commands>
					<command type="stateChange">
						<actions>
							<action>gestureHoldFour</action>
						</actions>
					</command>
				</commands>
            </sequence>
        </sequences>
        <holds>
			<hold gesture="fingersSpread">
                <angle type="pitch">
                    <anglePositive>
							<command type="keyboard">
								<actions>
									<action>upArrow</action>
								</actions>
							</command>
                    </anglePositive>
					<angleNegative>
							<command type="keyboard">
								<actions>
									<action>downArrow</action>
								</actions>
							</command>
					</angleNegative>
					<sensitivity>1</sensitivity>
                </angle>
				<angle type="yaw">
                    <anglePositive>
							<command type="keyboard">
								<actions>
									<action>rightArrow</action>
								</actions>
							</command>
					</anglePositive>
                    <angleNegative>
							<command type="keyboard">
								<actions>
									<action>leftArrow</action>
								</actions>
							</command>
					</angleNegative>
					<sensitivity>1</sensitivity>
                </angle>
				<angle type="roll">
                    <anglePositive>
							<command type="keyboard">
								<actions>
									<action>inputVector,p</action>
								</actions>
							</command>
					</anglePositive>
                    <angleNegative>
							<command type="keyboard">
								<actions>
									<action>inputVector,o</action>
								</actions>
							</command>
					</angleNegative>
					<sensitivity>1</sensitivity>
                </angle>
				<holdModeActionType>absDeltaFinite</holdModeActionType>
				<intervalLength>20</intervalLength>
            </hold>
			<hold gesture="fist">
                <angle type="roll">
                    <anglePositive>
							<command type="keyboard">
								<actions>
									<action>volumeUp</action>
								</actions>
							</command>
					</anglePositive>
                    <angleNegative>
							<command type="keyboard">
								<actions>
									<action>volumeDown</action>
								</actions>
							</command>
					</angleNegative>
					<sensitivity>1</sensitivity>
                </angle>
				<holdModeActionType>absDeltaFinite</holdModeActionType>
				<intervalLength>100</intervalLength>
            </hold>
        </holds>
    </profile>
</profiles>
